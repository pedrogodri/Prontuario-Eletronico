@model ProntuarioEletronico.Web.Models.DTO.ImageField

<h1>Create</h1>

<h4>News's Image Upload</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("ImagePost",
                              "Doctor",
                              FormMethod.Post,
                              new { enctype = "multipart/form-data" }))
        {                    
            <label for="file">Upload Image:</label>
            <input type="hidden" name="idImage" asp-for="IdImageField" id="idImage" />
            <input type="file" name="imageDoctor" id="imageDoctor" class="form-control" />
                    <br>
                    <br>
                    <input type="submit" value="Upload Image" class="btn btn-primary" />
                    <br>

                <br>  
            @ViewBag.Message  
        }
    </div>
</div>

<div>
