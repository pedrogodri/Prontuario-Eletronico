@model IEnumerable<ProntuarioEletronico.Domain.DTO.DoctorDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">New Category</a>
</p>
    <table id="table-doctor" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Foto</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Sexo</th>
                <th scope="col">Especialidade</th>
                <th scope="col">Registrado</th>
                <th scope="col">Alterado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var doctor in Model)
                {
                    <tr>
                        <td scope="row">@doctor.id</td>
                        <td>
                            <figure class="col-md-4">
                                <img src="~/Upload/@doctor.image" style="width: 64px;" />
                            </figure>
                        </td>
                        <td>@doctor.name</td>
                        <td>@doctor.age</td>
                        <td>@doctor.sex</td>
                        <td>@doctor.especialidade</td>
                        <td>@doctor.dataCadastro</td>
                        <td>@doctor.dataAtualizacao</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a class="btn btn-warning" asp-action="Details" asp-route-id="@doctor.id">Details</a>
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@doctor.id">Edit</a>
                                <a class="btn btn-danger" href="#" onclick="deleteMedicalPlan(@doctor.id)">Delete</a>
                                <a class="btn btn-info" asp-action="ImagePost" asp-route-id="@doctor.id"> &uArr; IMG </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd">
                    <td valign="top" colspan="5">
                        Nenhum usuário encontrado
                    </td>
                </tr>
            }
        </tbody>
    </table>


    @section Scripts {
        <script>
            const deleteDoctor = (id) => {
                msgModalMessage(`Deseja excluir o médico ${id}?`, () => {
                    $.ajax({
                        url: `@Url.Action("Delete")`,
                        method: 'POST',
                        data: {
                            id: id
                        },
                        success: (resp) => {
                            if (resp.code == '200') {
                                liveToastMessage(`O registro ${id} foi excluído com sucesso`, 'Doctor');
                                setTimeout(() => { window.location.reload(); }, 4000);
                            }
                        }
                    });
                    closeModalMessage();
                });
            }
        </script>
    }
