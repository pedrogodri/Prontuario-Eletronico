@using ProntuarioEletronico.Domain.Enums;
@model ProntuarioEletronico.Domain.DTO.PatientDTO

<h1>Create</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="age" class="control-label"></label>
                <input asp-for="age" class="form-control"/>
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" type="email"/>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control"/>
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cpf" class="control-label"></label>
                <input asp-for="cpf" class="form-control"/>
                <span asp-validation-for="cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rg" class="control-label"></label>
                <input asp-for="rg" class="form-control"/>
                <span asp-validation-for="rg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="profession" class="control-label"></label>
                <input asp-for="profession" class="form-control" />
                <span asp-validation-for="profession" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cep" class="control-label"></label>
                <input asp-for="cep" class="form-control" />
                <span asp-validation-for="cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address" class="control-label"></label>
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="number" class="control-label"></label>
                <input asp-for="number" class="form-control" />
                <span asp-validation-for="number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="complement" class="control-label"></label>
                <textarea asp-for="complement" class="form-control"></textarea>
                <span asp-validation-for="complement" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="sex" class="control-label"></label>
                <select asp-for="sex" class="form-control">
                    <option value="">Selecione</option>
                    <option value="@SexEnum.Masculine">Masculino</option>
                    <option value="@SexEnum.Feminine">Feminino</option>
                    <option value="@SexEnum.Others">Outros</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="maritalStatus" class="control-label"></label>
                <select asp-for="maritalStatus" class="form-control">
                    <option value="">Selecione</option>
                    <option value="@MaritalStatusEnum.Married">Casado(a)</option>
                    <option value="@MaritalStatusEnum.Single">Solteiro(a)</option>
                    <option value="@MaritalStatusEnum.Widower">Viúvo(a)</option>
                    <option value="@MaritalStatusEnum.Divorced">Divorciado(a)</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="diagnosis" class="control-label"></label>
                <textarea asp-for="diagnosis" class="form-control"></textarea>
                <span asp-validation-for="diagnosis" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="medicalPlanId" class="control-label"></label>
                <select asp-for="medicalPlanId" class="form-control" asp-items="@ViewBag.medicalPlanId">
                    <option value="">Teste</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="doctorId" class="control-label"></label>
                <select asp-for="doctorId" class="form-control" asp-items="@ViewBag.doctor">
                    <option value="doctorId">Teste</option>
                </select>
            </div>*@



            <div class="form-group">
                <label asp-for="dataCadastro" class="control-label"></label>
                <input asp-for="dataCadastro" type="hidden" value="@DateTime.Now" class="form-control" />
                <span asp-validation-for="dataCadastro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }