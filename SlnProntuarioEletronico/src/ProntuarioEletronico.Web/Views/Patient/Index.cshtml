@model IEnumerable<ProntuarioEletronico.Domain.DTO.PatientDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">New Category</a>
</p>
    <table id="table-doctor" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Foto</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Telefone</th>
                <th scope="col">E-mail</th>
                <th scope="col">Sexo</th>
                <th scope="col">Registrado</th>
                <th scope="col">Alterado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var patient in Model)
                {
                    <tr>
                    <td scope="row">@patient.id</td>
                        <td>
                            <figure class="col-md-4">
                                <img src="~/Upload/@patient.image" style="width: 64px;" />
                            </figure>
                        </td>
                        <td>@patient.name</td>
                        <td>@patient.age</td>
                        <td>@patient.phone</td>
                        <td>@patient.email</td>
                        <td>@patient.sex</td>
                        <td>@patient.dataCadastro</td>
                            <td>@patient.dataAtualizacao</td>
                        <td>
                            <div class="btn-group" role="group">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@patient.id">Edit</a> |
                                <a class="btn btn-danger" href="#" onclick="deleteMedicalPlan(@patient.id)">Delete</a>
                            <a class="btn btn-info" asp-action="ImagePost" asp-route-id="@patient.id"> &uArr; IMG </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="odd">
                    <td valign="top" colspan="5">
                        Nenhum usuário encontrado
                    </td>
                </tr>
            }
        </tbody>
    </table>

@section Scripts {
            <script>
                    const deletePatient = (idParam) => {
                    msgModalMessage(`Deseja excluir o paciente ${idParam}?`, () => {
                    $.ajax({
                        url: `@Url.Action("Delete")`,
                        method: 'POST',
                        data: {
                            id: idParam
                        },
                        success: (resp) => {
                            var msg = `O Registro ${idParam} foi excluído.`;
                            if (!(resp.code == '200')) {
                                msg = resp.status;
                            }
                            liveToastMessage(msg, 'Patient');
                            setTimeout(() => { window.location.reload(); }, 4000);
                        }
                    });
                    closeMsgModalMessage();
                });
            }
            </script>
}

