@model IEnumerable<ProntuarioEletronico.Domain.DTO.MedicalPlanDTO>

<p>
    <a class="btn btn-primary" asp-action="Create">New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.plan)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a class="btn btn-danger" href="#" onclick="deleteMedicalPlan(@item.id)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        const deleteMedicalPlan = (id) => {
            msgModalMessage(`Deseja excluir o convênio ${id}?`, () => {
                $.ajax({
                    url: `@Url.Action("Delete")`,
                    method: 'POST',
                    data: {
                        id: id
                    },
                    success: (resp) => {
                        if(resp.code == '200') {
                            liveToastMessage(`O registro ${id} foi excluído com sucesso`, 'MedicalPlan');
                            setTimeout(() => {window.location.reload();}, 4000);
                        }
                    }
                });
                closeModalMessage();
            });
        }
    </script>
}