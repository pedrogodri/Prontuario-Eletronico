@model ProntuarioEletronico.Domain.DTO.MedicalPlanDTO



<div class="text-light">
    <h1>Criar</h1>
    <h4>Adicionar um novo convênio ao prontuário</h4>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="text-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="plan" class="control-label">Plano de Saúde</label>
                <input asp-for="plan" class="form-control" />
                <span asp-validation-for="plan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btnDB" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn voltarLista">Voltar a lista de convênios</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }